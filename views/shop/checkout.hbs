<div class="w3-row" style="padding-bottom: 300px;">
    <div class="w3-col w3-container" style="width: 25%;"></div>
    <div class="w3-col w3-container w3-card-4 w3-light-grey" style="width: 50%;">
        
        <h1>Checkout</h1>
        <h4>Your Total: â‚¹{{total}}</h4>
        <div id="charge-error" class="w3-panel w3-pale-red w3-text-red {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>

        <form  action="/checkout" method="post" id = "checkout-form">
            <div class="w3-row">
                <div style="margin-top: 5px;">
                    <label for="name">Name</label>
                    <input class="w3-input w3-border w3-round" type="text"  id = "name" required name = "name">
                </div>
                <div style="margin-top: 5px;">
                    <label for="address">Address</label>
                    <input class="w3-input w3-border w3-round" type="text" name="address" id = "address" required>
                </div>
                <hr>
                <div style="margin-top: 5px;">
                    <label for="card-name">Card Holder Name</label>
                    <input class="w3-input w3-border w3-round" type="text"  id = "card-name" required>
                </div>
                <div style="margin-top: 5px;">
                    <label for="card-number">Credit Card Number</label>
                    <input class="w3-input w3-border w3-round" type="text"  id = "card-number" required>
                </div>
                <div style="margin-top: 5px;">
                    <div class="w3-row">
                        <div class="w3-col" style="width: 45%;">
                            <label for="card-expiry-month">Expiration Month</label>
                            <input class="w3-input w3-border w3-round" type="text"  id = "card-expiry-month" required>
                        </div>
                        <div class="w3-col" style="width: 45%;margin-left:55.8px;">
                            <label for="card-expiry-year">Expiration Year</label>
                            <input class="w3-input w3-border w3-round" type="text"  id = "card-expiry-year" required>
                        </div>
                    </div>
                </div>
                <div style="margin-top: 5px;">
                    <label for="card-cvv">CVV</label>
                    <input class="w3-input w3-border w3-round" type="text"  id = "card-cvv" required>
                </div>
            </div>
            
            
            
            <button class="w3-button w3-indigo w3-round-large" type="submit" style="margin-top: 5px;margin-bottom:7px">Buy Now</button>
        </form>
       
    </div>
    <div class="w3-col w3-container" style="width: 25%;"></div>
    
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>